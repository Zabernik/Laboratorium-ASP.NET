@model Contact
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Dane konta o id=@Model.ID to:</h1>
<p>Imię - @Model.Name</p>
<p>Email - @Model.Email</p>
<p>Numer telefonu - @Model.Phone</p>
@if(Model.Birth is not null)
{
    <p>Data urodzenia - @Model.Birth</p>
}
<form asp-action="Details" method="post">
    <button class="btn btn-primary" action="Index">Powrót do Kontaktów</button>
</form>
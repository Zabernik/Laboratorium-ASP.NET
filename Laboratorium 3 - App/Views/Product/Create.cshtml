@{
}

<h1>Dodaj nowy Produkt</h1>
<form asp-controller="Product" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfProduction"></label>
        <input class="form-control" asp-for="DateOfProduction" />
        <span class="text-danger" asp-validation-for="DateOfProduction"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Category"></label>
        <select class="form-control" asp-for="Category" asp-items="@Html.GetEnumSelectList<Category>()"></select>
        <span class="text-danger" asp-validation-for="Category"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ProducerName"></label>
        <select class="form-control" asp-for="ProducerName" asp-items="@Model.Producers"></select>
        <span class="text-danger" asp-validation-for="ProducerName"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Utwórz</button>
    </div>
</form>

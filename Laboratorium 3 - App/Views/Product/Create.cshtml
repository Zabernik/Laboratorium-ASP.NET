@{
}

<h1>Dodaj nowy Produkt</h1>
<form asp-controller="Product" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfProdaction"></label>
        <input class="form-control" asp-for="DateOfProdaction" />
        <span class="text-danger" asp-validation-for="DateOfProdaction"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Producer"></label>
        <select class="form-control" asp-for="Producer" asp-items="@Html.GetEnumSelectList<Producer>()"></select>
        <span class="text-danger" asp-validation-for="Producer"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Utwórz</button>
    </div>
</form>
